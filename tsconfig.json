{
    "compilerOptions": {
        "composite": true,
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "noImplicitAny": true,
        "esModuleInterop": false,
        "resolveJsonModule": true,
        "module": "commonjs",
        "target": "es6",
        "types": [
            "node"
        ],
        "lib": [
            "es6"
        ]
    },
    "include": [
        "out",
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}